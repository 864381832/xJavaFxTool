<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="517.0" prefWidth="802.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.xwintop.xJavaFxPlugIn.controller.developTools.ScanPortToolController">
   <children>
      <BorderPane layoutX="46.0" layoutY="30.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <top>
            <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="输入域名或ip地址(多个可用,分割)，将扫描该主机的常见端口号：" />
                  <TextField fx:id="hostTextField" promptText="输入主机名或ip地址(多个可用,分割)" text="localhost" HBox.hgrow="ALWAYS" />
                  <Button fx:id="scanButton" mnemonicParsing="false" onAction="#scanAction" text="扫描" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <center>
            <SplitPane dividerPositions="0.4" BorderPane.alignment="CENTER">
              <items>
                  <VBox spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="65.0" text="指定端口：" />
                              <TextField fx:id="diyPortTextField" promptText="多个使用,分隔;连续使用-分隔" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="过滤ip：" />
                              <TextField fx:id="ipFilterTextField" promptText="多个使用,分隔" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="65.0" text="过滤端口：" />
                              <TextField fx:id="portFilterTextField" promptText="多个使用,分隔" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <Label text="常见端口：" />
                        <FlowPane fx:id="commonPortFlowPane" hgap="5.0" vgap="5.0" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Button fx:id="parseDomainButton" mnemonicParsing="false" onAction="#parseDomainAction" text="解析ip" />
                              <TextField fx:id="domainIpTextField" promptText="解析域名对应ip地址" HBox.hgrow="ALWAYS" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Button fx:id="getNatIpAddressButton" mnemonicParsing="false" onAction="#getNatIpAddressAction" text="获取本机外网ip" />
                              <TextField fx:id="natIpTextField" promptText="本机外网对应ip地址" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="地理位置:" />
                              <TextField fx:id="natIpAddressTextField" promptText="本机外网所在地理位置" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <TableView fx:id="connectStatusTableView" editable="true" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="ipTableColumn" prefWidth="75.0" text="ip" />
                      <TableColumn fx:id="portTableColumn" prefWidth="75.0" text="端口" />
                      <TableColumn fx:id="statusTableColumn" prefWidth="75.0" text="状态" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
              </items>
            </SplitPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
