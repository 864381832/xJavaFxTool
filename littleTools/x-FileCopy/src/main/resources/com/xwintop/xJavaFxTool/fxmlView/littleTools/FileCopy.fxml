                  <HBox fx:id="actionScheduleHBox" spacing="5.0" />
                  <Button fx:id="buttonCopy" mnemonicParsing="false" onAction="#copyAction" text="一键拷贝" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <center>
            <TableView fx:id="tableViewMain" editable="true" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="tableColumnCopyFileOriginalPath" prefWidth="250.0" sortable="false" text="原文件路径" />
