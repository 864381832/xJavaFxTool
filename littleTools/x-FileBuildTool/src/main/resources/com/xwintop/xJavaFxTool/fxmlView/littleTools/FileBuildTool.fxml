<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="516.0" prefWidth="906.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.xwintop.xJavaFxTool.controller.littleTools.FileBuildToolController">
   <children>
      <BorderPane layoutX="10.0" layoutY="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <top>
            <HBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <CheckBox fx:id="isShowCheckBox" mnemonicParsing="false" selected="true" text="预览" />
                  <Button fx:id="buildMoreFileButton" mnemonicParsing="false" onAction="#buildMoreFileAction" text="生成多个文件" />
                  <Button fx:id="buildOneFileButton" mnemonicParsing="false" onAction="#buildOneFileAction" text="生成单个文件" />
                   <Label text="单文件间隔符" />
                   <TextField fx:id="oneFileSpaceTextField" text="\\n" promptText="生成单个文件时间隔符号" />
                  <Label text="文件名" />
                  <TextField fx:id="fileNameTextField" promptText="输入文件名" />
                  <Label text="输出路径" />
                  <TextField fx:id="outputFilePathTextField" promptText="加载配置文件路径" />
                  <Button fx:id="outputFilePathButton" layoutX="256.0" layoutY="20.0" mnemonicParsing="false" onAction="#outputFilePathAction" text="选择" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <center>
            <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
               <items>
                  <TextArea fx:id="fileTemplateTextArea" promptText="请输入文件模版，变量使用${}代替" />
                  <TableView fx:id="fieldTableView" editable="true">
                    <columns>
<!--                      <TableColumn prefWidth="75.0" text="字段1" />-->
<!--                      <TableColumn prefWidth="75.0" text="字段2" />-->
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </items>
            </SplitPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
