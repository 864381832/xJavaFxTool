                                    </LineChart>
                                 </content>
                              </TitledPane>
                              <TitledPane animated="false" text="网络" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <content>
                                    <LineChart fx:id="overviewNetLineChart">
                                      <xAxis>
                                        <CategoryAxis side="BOTTOM" />
                                      </xAxis>
                                      <yAxis>
                                        <NumberAxis side="LEFT" />
                                      </yAxis>
                                    </LineChart>
