                                        <CategoryAxis side="BOTTOM" />
                                      </xAxis>
                                      <yAxis>
                                        <NumberAxis side="LEFT" />
                                      </yAxis>
                                    </LineChart>
                                 </content>
                              </TitledPane>
                              <TitledPane animated="false" text="磁盘" GridPane.rowIndex="1">
